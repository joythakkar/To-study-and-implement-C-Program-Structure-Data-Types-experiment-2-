#include <iostream>
using namespace std;

int main() {
    int a;
    bool f;

    cout << "Enter any integer: ";
    cin >> a;
    cout << "Integer = " << a << " and size is " << sizeof(a) << " bytes" << endl;

    cout << "Enter any boolean (0 or 1): ";
    cin >> f;
    cout << "Boolean = " << f << " and size is " << sizeof(f) << " bytes" << endl;

    return 0;
}
